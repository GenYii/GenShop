{
    "name": "GenShop",
    "description": "GenShop，基于Yii2，来自GenYii",
    "keywords": ["yii2","shop","genyii","alipay","qq","weixin","cart","商城"],
    "homepage": "https://github.com/GenYii/GenShop",
    "type": "project",
    "license": "Apache License",
    "support": {
        "issues": "https://github.com/GenYii/GenShop/issues",
        "wiki": "https://github.com/GenYii/GenShop/wiki",
        "source": "https://github.com/GenYii/GenShop"
    },
    "minimum-stability": "dev",
    "require": {
        "php": ">=5.4.0",
        "yiisoft/yii2": ">=2.0.4",
        "yiisoft/yii2-bootstrap": "*",
        "yiisoft/yii2-swiftmailer": "*",
        "omnilight/yii2-shopping-cart": "*",
        "xj/yii2-oauth": "*",
        "dmstr/yii2-adminlte-asset": "2.*",
        "gerpayt/yii2-alipay": "*",
        "amnah/yii2-user": "dev-master",
        "kartik-v/yii2-grid": "*",
        "kartik-v/yii2-helpers": "*"
    },
    "require-dev": {
        "yiisoft/yii2-codeception": "*",
        "yiisoft/yii2-debug": "*",
        "yiisoft/yii2-gii": "*",
        "yiisoft/yii2-faker": "*"
    },
    "config": {
        "process-timeout": 1800
    },
    "extra": {
        "asset-installer-paths": {
            "npm-asset-library": "vendor/npm",
            "bower-asset-library": "vendor/bower"
        }
    }
}
